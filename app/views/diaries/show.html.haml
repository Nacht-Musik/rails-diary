%p#notice= notice
%p
  %strong ID:
  = @diary.id
%p
  %strong タイトル:
  = @diary.title
%p
  %strong 本文:
  = @diary.body
%p
  %strong 登録日時:
  = @diary.created_at
%p
  %strong 更新日時:
  = @diary.updated_at

.btn-group{"aria-label" => "操作ボタン", :role => "group"}
  = link_to '編集', edit_diary_path(@diary), remote: true, class: 'btn btn-outline-success'
  = link_to '削除', @diary, method: :delete, class: 'btn btn-outline-danger',
    data: { confirm: 'Are you sure?' }
  = link_to '戻る', diaries_path, class: 'btn btn-outline-primary'
